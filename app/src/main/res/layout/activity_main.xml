<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente_fondo"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/numberContainer"
        android:layout_width="362dp"
        android:layout_height="69dp"
        android:layout_margin="16dp"
        android:background="@drawable/gradiente_display"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:padding="16dp"
        android:text="0"
        android:textColor="@color/display_text"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/secondGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />


    <TextView
        android:id="@+id/currentHistory"
        android:layout_width="189dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:textColor="@color/display_text"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/secondGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberContainer"
        app:layout_constraintVertical_bias="0.0" />

    <GridLayout
        android:id="@+id/gridCalc"
        android:layout_width="359dp"
        android:layout_height="499dp"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65">

        <Button
            android:id="@+id/division"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="/"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="1" />

        <Button
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="2" />

        <Button
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="3" />

        <Button
            android:id="@+id/multiplication"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="*"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="4" />

        <Button
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="5" />

        <Button
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="6" />

        <Button
            android:id="@+id/resta"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="-"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="7" />

        <Button
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="8" />

        <Button
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="9" />

        <Button
            android:id="@+id/suma"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="+" />

        <Button
            android:id="@+id/b0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:text="0" />

        <Button
            android:id="@+id/b00"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="00" />

        <Button
            android:id="@+id/equals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="2"
            android:layout_columnSpan="4"
            android:layout_columnWeight="3"
            android:layout_gravity="fill"
            android:text="=" />
    </GridLayout>

    <GridLayout
        android:id="@+id/secondGrid"
        android:layout_width="319dp"
        android:layout_height="43dp"
        android:columnCount="7"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/gridCalc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="45dp"
            android:layout_height="wrap_content"

            android:text="C"
            android:textSize="12sp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/buttonMC"
            android:layout_width="45dp"
            android:layout_height="wrap_content"

            android:enabled="false"
            android:text="MC"
            android:textSize="12sp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/buttonMR"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:enabled="false"

            android:text="MR"
            android:textSize="12sp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/buttonMPlus"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:enabled="false"

            android:text="M+"
            android:textSize="12sp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/buttonMLess"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:enabled="false"

            android:text="M-"
            android:textSize="12sp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/buttonMS"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="MS"

            android:textSize="12sp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="del"

            android:textSize="12sp"
            app:cornerRadius="0dp" />

    </GridLayout>

    <ScrollView
        android:id="@+id/historyContainer"
        android:layout_width="368dp"
        android:layout_height="94dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridCalc"
        app:layout_constraintVertical_bias="0.38">

        <TextView
            android:id="@+id/historyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/display_text"
            android:textSize="16sp"
            android:textStyle="bold" />
    </ScrollView>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="123dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:text="Ugly mode"
        android:textColor="@color/accent_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridCalc"
        app:layout_constraintVertical_bias="0.584" />


</androidx.constraintlayout.widget.ConstraintLayout>
