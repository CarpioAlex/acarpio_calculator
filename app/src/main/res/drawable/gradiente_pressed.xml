<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Borde exterior -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A2A3A" /> <!-- Color del borde al presionar -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Gradiente más oscuro para el botón al ser presionado -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#3A70B2"
                android:endColor="#264B73"
                android:angle="135" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
